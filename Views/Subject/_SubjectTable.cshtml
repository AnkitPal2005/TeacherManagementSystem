@model List<TeacherManagementSystem.Models.Subject>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Subject Name</th>
            <th>Code</th>
            <th width="180">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No Subject Found</td>
            </tr>
        }
        else
        {
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>
                        <button class="btn btn-warning btn-sm btn-edit"
                                data-id="@item.Id">
                            Edit
                        </button>

                        <button class="btn btn-danger btn-sm btn-delete"
                                data-id="@item.Id">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
